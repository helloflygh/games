<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Embedded Web Viewer</title>
    <style>
        /* Basic Page Setup */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            font-family: 'Inter', -apple-system, sans-serif;
            background-color: #1a1a1a;
            color: white;
            overflow: hidden; /* Keeps everything contained */
        }

        /* The Interactive Title Section */
        #header-trigger {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
            z-index: 100;
            transition: transform 0.8s cubic-bezier(0.87, 0, 0.13, 1);
            cursor: pointer;
        }

        /* Style when the title is clicked and moves out of the way */
        #header-trigger.slide-up {
            transform: translateY(-100%);
        }

        .title-text {
            text-align: center;
        }

        h1 {
            font-size: 4rem;
            margin: 0;
            letter-spacing: -2px;
            text-transform: uppercase;
            user-select: none;
        }

        p {
            opacity: 0.6;
            margin-top: 10px;
        }

        /* The Iframe Container (The Website View) */
        #content-viewer {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
            background-color: white;
        }

        /* Reset Button - to bring the title back */
        #reset-ui {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 101;
            padding: 10px 15px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.3);
            border-radius: 50px;
            color: white;
            cursor: pointer;
            display: none;
        }
    </style>
</head>
<body>

    <div id="header-trigger" onclick="revealSite()">
        <div class="title-text">
            <h1>OPEN INTERFACE</h1>
            <p>Click anywhere to embed the view</p>
        </div>
    </div>

    <div id="content-viewer">
        <iframe id="target-frame" src=""></iframe>
    </div>

    <button id="reset-ui" onclick="hideSite()">Back to Title</button>

    <script>
        // Set the website you want to show here:
        const targetURL = "https://www.wikipedia.org";

        function revealSite() {
            const header = document.getElementById('header-trigger');
            const frame = document.getElementById('target-frame');
            const btn = document.getElementById('reset-ui');

            // Set the URL only when clicked to save bandwidth
            if (frame.src === "" || frame.src !== targetURL) {
                frame.src = targetURL;
            }

            header.classList.add('slide-up');
            btn.style.display = 'block';
        }

        function hideSite() {
            const header = document.getElementById('header-trigger');
            const btn = document.getElementById('reset-ui');

            header.classList.remove('slide-up');
            btn.style.display = 'none';
        }
    </script>

</body>
</html>
